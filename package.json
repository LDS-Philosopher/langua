{
  "name": "langua",
  "version": "0.3.1",
  "license": "AGPL-3.0",
  "author": "Ian A. Cook",
  "description": "A suite of language tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/nai888/langua"
  },
  "homepage": "https://nai888.github.io/langua/",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test-with-coverage": "react-scripts test --env=jsdom --coverage && codacy-coverage < ./coverage/lcov.info",
    "lintjs": "eslint src/**/*.js",
    "lintmd": "remark .",
    "format": "prettier-standard 'src/**/*.js'",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "dependencies": {
    "classnames": "2.2.6",
    "color": "3.1.0",
    "file-saver": "2.0.0",
    "js-schema": "1.0.1",
    "normalize.css": "8.0.1",
    "prop-types": "^15.6.2",
    "react": "16.6.3",
    "react-app-polyfill": "0.1.3",
    "react-dom": "16.6.3",
    "react-helmet": "5.2.0",
    "react-jss": "8.6.1",
    "react-router-dom": "4.3.1",
    "react-scripts": "2.1.1",
    "react-toastify": "4.4.3",
    "react-vis": "^1.11.5"
  },
  "devDependencies": {
    "codacy-coverage": "^3.3.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier-standard": "^8.0.1",
    "react-snap": "1.23.0",
    "react-test-renderer": "^16.6.3",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 9",
    "not op_mini all"
  ]
}
